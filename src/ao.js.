import * as dotenv from "dotenv"

console.log("RENDER BOOT OK – AO_MASTER_FULL_DEPLOY_CLEAN – src/ao.js")

dotenv.config()

import { startGptInterface } from "./core/gptInterface.js"
import { startSystemArchitect } from "./core/systemArchitect.js"
import { startMasterBuilder } from "./core/masterBuilder.js"

const role = process.env.AO_ROLE

console.log("AO gestart met rol:", role)

switch (role) {
case "ao-gpt-interface":
startGptInterface()
break

case "ao-system-architect":
startSystemArchitect()
break

case "ao-master-builder":
startMasterBuilder()
break

default:
console.error("AO_ROLE ontbreekt of is ongeldig:", role)
process.exit(1)
}
